{
  "permissions": {
    "allow": [
      "Bash(*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/bash-optimizer.py"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/ssh-router.py"
          }
        ]
      }
    ]
  }
}